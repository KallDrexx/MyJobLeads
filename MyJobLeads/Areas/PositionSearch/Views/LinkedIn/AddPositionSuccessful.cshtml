@model MyJobLeads.DomainModel.ViewModels.PositionSearching.ExternalPositionAddedResultViewModel

@{
    ViewBag.Title = "Position Successfully Added";
}

<div class="grid1 floatLeft"> 
    <div class="pageInfoBox"> 
        <div class="grid3 marginBottom_10 marginAuto floatLeft">
            <h3>Position Added To Your Job Search</h3>
        </div>

        <div class="grid3 marginBottom_10 marginAuto floatLeft">
            <p>
                You have successfully added
                @Html.ActionLink(Model.PositionTitle, MVC.Position.Details(Model.PositionId), new { @class = "inlineBlue", title = "View Position Details" })
                to your job search for the
                @Html.ActionLink(Model.CompanyName, MVC.Company.Details(Model.CompanyId), new { @class = "inlineBlue", title = "View Company Details" }).
            </p>
        </div>
            
        <div class="clear"></div>
    </div>
</div>
