@model MyJobLeads.Areas.ContactSearch.Models.Jigsaw.JigsawContactPurchaseViewModel

@{
    ViewBag.Title = "Purchase Jigsaw Contact";
}

<div class="grid1 floatLeft"> 
    <div class="pageInfoBox"> 
        @using (Html.BeginForm()) 
        {
            @Html.HiddenFor(x => x.JigsawContactId)
            @Html.HiddenFor(x => x.JigsawContactName)
            @Html.HiddenFor(x => x.ReturnUrl)
                
            <div class="grid3 marginBottom_10 marginAuto floatLeft"> 
                <h3 class="floatLeft">Purchase Contact Info From Jigsaw</h3> 
            </div> 
            
            <div class="grid3 marginBottom_10 marginAuto floatLeft">
                <p>
                    Purchasing the contact detail for <span class="bold">@Model.JigsawContactName</span> will cost 
                    <span class="bold">5</span> points.  Your Jigsaw account currently has <span class="bold">@Model.Points</span>.
                </p>

                <p>
                    To get more points, please visit <a href="@Model.PurchasePointsUrl" class="inlineBlue">your Jigsaw account</a>.  
                    Once points are added, return to this page and refresh the page.
                </p>
            </div>
                
            <div class="grid3 marginBottom_10 marginAuto floatleft">
                <div class="floatLeft infoSpan">
                    @Html.ValidationSummary()
                </div>
            </div>
                
            <div class="grid3 marginBottom_10 floatLeft"> 
                <div class="floatLeft">
                    <p class="greyHighlight">@Html.LabelFor(x => x.PurchaseContact, string.Concat("Purchase ", Model.JigsawContactName, " for 5 points:"))
                        @Html.CheckBoxFor(x => x.PurchaseContact)
                    </p>
                </div> 
            </div>
            
            <div class="grid3 marginBottom_20 floatLeft"> 
                <div class="submitBTN ">
                    <input type="submit" value="Purchase" />
                </div>                    
            </div> 
        }

        <div class="clear"></div> 
    </div> 
</div>
