@model MyJobLeads.DomainModel.ViewModels.Milestones.MilestoneDisplayListViewModel

@{
    ViewBag.Title = "Milestone List";
}

<div class="grid1 floatLeft"> 
    <div class="pageInfoBox">         
        <div class="grid3 marginBottom_10 marginAuto floatLeft"> 
            <h3 class="floatLeft">Milestone Configuration</h3> 
        </div>
        
        <div class="grid3 marginBottom_10 floatLeft">
            <div class="floatLeft infoSpan">
                <p>
                    This page allows you to configure the milestones that students have available to them. &nbsp;  
                    Milestones are a way for you to provide goals for your students to excel in their job search. 
                </p>
            </div>
        </div> 
                
        <div class="grid3 marginBottom_10 floatLeft"> 
            <div class="floatLeft infoSpan">
                @if (Model.Milestones.Count == 0)
                {
                    <p>Your university does not have any milestones configured yet</p>
                }

                <ol>
                    @foreach (var ms in Model.Milestones)
                    {
                        <li>
                            @Html.ActionLink(ms.Name, MVC.Organization.Milestone.Details(ms.Id), new { @class = "inlineBlue" })
                        </li>
                    }
                </ol>

                <br />
                <ul>
                    <li>
                        @Html.ActionLink("Add Milestone", MVC.Organization.Milestone.Create(), new { @class = "inlineBlue" })
                    </li>
                </ul>
            </div> 
        </div> 
        
        <div class="clear"></div> 
    </div> 
</div> 
