@model MyJobLeads.Areas.FillPerfect.Models.Surveys.StudentSurveyPost2WeeksViewModel

@{
    ViewBag.Title = "Student Survey";
}

@using (Html.PageInfoBox(false))
{
    using (Html.BeginForm())
    {
        @Html.HiddenFor(x => x.FpUserId)
        
        using (Html.OuterRow())
        {
            <h3>Student Survey</h3>
        }
       
        using (Html.OuterRow())
        {
            using (Html.ContentArea())
            {
                <p>
                    @Model.Question
                </p>
            }
        }

        using (Html.OuterRow())
        {
            using (Html.ValidationArea())
            {
                @Html.ValidationSummary()
            }
        }

        using (Html.OuterRow())
        {
            using (Html.FormFieldArea(new HtmlString("")))
            {
                <table>
                    <tr>
                        <td align="left">&nbsp; 1</td>
                        <td align="center">&nbsp; &nbsp;5</td>
                        <td align="right">10 &nbsp;</td>
                    </tr>

                    <tr>
                        <td colspan="3">
                            @Html.RadioButtonFor(x => x.Answer, 1)
                            @Html.RadioButtonFor(x => x.Answer, 2)
                            @Html.RadioButtonFor(x => x.Answer, 3)
                            @Html.RadioButtonFor(x => x.Answer, 4)
                            @Html.RadioButtonFor(x => x.Answer, 5)
                            @Html.RadioButtonFor(x => x.Answer, 6)
                            @Html.RadioButtonFor(x => x.Answer, 7)
                            @Html.RadioButtonFor(x => x.Answer, 8)
                            @Html.RadioButtonFor(x => x.Answer, 9)
                            @Html.RadioButtonFor(x => x.Answer, 10)
                        </td>
                    </tr>
                </table>
    
                <text>
                    &nbsp; 1 denotes that you did not find this product useful <br />
                    &nbsp; 5 means you found the product of average usefulness<br />
                    &nbsp; 10 means you found the product extremely useful <br />
                </text>
            }
        }

        using (Html.OuterRow())
        {
            Html.FormField("Additional Comments", Html.TextAreaFor(x => x.Comments, new { @class = "textAreaInfo" }));
        }

        using (Html.OuterRow())
        {
            using (Html.FormButtonArea())
            {
                <input type="submit" value="Submit" />
            }
        }
    }
}
