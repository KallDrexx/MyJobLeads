@model MyJobLeads.DomainModel.Entities.Company

@{
    ViewBag.Title = "Company: " + Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Company: @Model.Name</h2>
@Html.ActionLink("Edit", MVC.Company.Edit(Model.Id)) <br /><br />

Name: @Model.Name <br />
Phone: @Model.Phone <br />
City: @Model.City <br />
State: @Model.State <br />
Zip: @Model.Zip <br />
Metro Area: @Model.MetroArea <br />
Industry: @Model.Industry <br />
Notes: @Model.Notes <br />

<br />

<h2>Contacts</h2>
@Model.Contacts.Count Contact(s) have been entered for this company

<h2>Tasks</h2>
@Model.Tasks Task(s) have been created for this company