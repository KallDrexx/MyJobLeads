@model MyJobLeads.DomainModel.ProcessParams.Users.EditUserDetailsParams

@{
    ViewBag.Title = "Edit User Details";
}

<div class="grid1 floatLeft"> 
        <div class="pageInfoBox"> 
            @using (Html.BeginForm()) 
            {
                @Html.HiddenFor(x => x.UserId)
                @Html.HiddenFor(x => x.CurrentEmail)
                
                <div class="grid3 marginBottom_10 marginAuto floatLeft"> 
                    <h3 class="floatLeft">Edit Account Details</h3> 
                </div> 
                
                <div class="grid3 marginBottom_10 marginAuto floatLeft">
                    <div class="floatLeft">
                        <p>
                            This form allows you to change details.  You must supply your current password to make any changes to your account.<br /
                        </p>    
                    </div>
                </div>
                
                <div class="grid3 marginBottom_10 marginAuto floatleft">
                    <div class="floatLeft infoSpan">
                        @Html.ValidationSummary()
                    </div>
                </div>
                
                <div class="grid3 marginBottom_10 floatLeft"> 
                    <div class="floatLeft"><p class="greyHighlight">Current Password:</p>
                        <div class="infoSpan">@Html.PasswordFor(x => x.CurrentPassword, new { @class = "info" })</div>
                    </div> 
                </div>
                
                <div class="grid3 marginBottom_10 floatLeft"> 
                    <div class="floatLeft"><p class="greyHighlight">Full Name:</p>
                        <div class="infoSpan">@Html.TextBoxFor(x => x.FullName, new { @class = "info" })</div>
                    </div> 
                </div> 

                <div class="grid3 marginBottom_10 floatLeft"> 
                    <div class="floatLeft"><p class="greyHighlight">New Password:</p>
                        <div class="infoSpan">@Html.PasswordFor(x => x.NewPassword, new { @class = "info" })</div>
                    </div> 
                </div>
                
                <div class="grid3 marginBottom_10 floatLeft"> 
                    <div class="floatLeft"><p class="greyHighlight">Password Confirmation:</p>
                        <div class="infoSpan">@Html.PasswordFor(x => x.NewPasswordConfirmation, new { @class = "info" })</div>
                    </div> 
                </div>

                <div class="grid3 marginBottom_20 floatLeft"> 
                    <div class="submitBTN "><input type="submit" value="Save" /></div>                    
                </div> 
            }

            <div class="clear"></div> 
        </div> 
</div> 
