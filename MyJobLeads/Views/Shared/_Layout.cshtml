<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="en" xml:lang="en">
<head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
	<meta name="description" content="Your description goes here" />
	<meta name="keywords" content="your,keywords,goes,here" />
	<meta name="author" content="Your Name" />
    <title>@ViewBag.Title</title>
    @(Html.Telerik().StyleSheetRegistrar()
                    .DefaultGroup(group => group
                        .Add("~/Content/Site.css")
                        .Add("~/Content/Forms.css")
                        .Add("telerik.common.css")
                        .Add("Telerik.vista.css")
                        .Combined(true)
                        .Compress(true))
    )
</head>

<body>

    <div id="top">
        <div class="inner">

	        <div id="topleft">
                <h1>@Html.ActionLink("InterviewTools", MVC.Home.Index())</h1>
			    <p><strong>Empower Your Jobsearch</strong></p>
            </div>

            <div id="topright">
                <p>@Html.Partial("_LogOnPartial")</p>
            </div>

		    <div id="mainmenu">
			    <ul>
				    <li>@Html.ActionLink("Home", MVC.Home.Index())</li>
				    <li>@Html.ActionLink("About", MVC.Home.About())</li>
				    <li><a href="#">University Access</a></li>
			    </ul>
		    </div>
	    </div>
    </div>

    <div id="wrap">
        <div class="inner">

	        <div id="content">
		        @RenderBody()
		        <br class="clear" />
	        </div>

            @{ string sidebarHtml = ViewBag.Sidebar == null ? string.Empty : ViewBag.Sidebar.ToString(); }
            @if (!string.IsNullOrWhiteSpace(sidebarHtml))
            {
	            <div id="sidebar">
                    @ViewBag.Sidebar

	                <br class="clear" />
                </div>
            }
        </div>
        <br class="clear" />
    </div>
	
    <div id="footer">
        <div class="inner">
        
            <p>
                <span class="credits">&copy; 2011 Company Name</span><br />
                <a href="javascript:void()" id="feedback-link">Tell us what you think!</a>
            </p>

        </div>
    </div>

    @{ Html.Telerik().Window()
            .Name("FeedbackWindow")
            .Title("Submit Feedback")
            .Draggable(true)
            .Modal(true)
            .Buttons(b => b.Close())
            .Content(@<text>
            @using (Html.BeginForm(MVC.Home.SubmitFeedback(), FormMethod.Post, new { id = "feedback-form" }))
            {
                <p>We appreciate your feedback on the InterviewTools system.</p>
                                        
                @Html.Hidden("fromUrl", @HttpContext.Current.Request.Url.AbsoluteUri)

                <label for="name">Name:</label> <br />
                @Html.TextBox("name") <br />
                                        
                <label for="email">Email:</label> <br />
                @Html.TextBox("email") <br /><br />

                <label for="feedback">Comments:</label>
                @(Html.Telerik().Editor()
                                .Name("feedback")
                                .Tools(tools => tools
                                        .Clear()
                                        .Bold().Italic().Separator()
                                        .InsertOrderedList().InsertUnorderedList().Separator()
                                        .Indent().Outdent()
                ))
                <br />
                                        
                <div class="form-actions">
                    <button type="submit" class="t-button t-state-default">Submit feedback!</button>
                </div>
            }
            </text>)
        .Width(400)
        .Draggable(true)
        .Modal(true)
        .Visible(false)
        .Render();
    }

    @(Html.Telerik().ScriptRegistrar()
        .OnDocumentReady(@<text>
            // Open the hidden window when the feedback-link is clicked
            $('#feedback-link').click(function(e) {
                e.preventDefault();
                $('#FeedbackWindow').data('tWindow').center().open();
            });
        </text>)
    )
</body>
</html>
