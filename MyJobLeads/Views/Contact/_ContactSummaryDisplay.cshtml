@model MyJobLeads.ViewModels.Contacts.ContactSummaryViewModel

<div class="grid1 marginBottom_20 floatLeft"> 
    <div class="BottomPageInfo"> 
        <div class="grid3 marginAuto floatLeft"> 
            <h3 class="floatLeft">@Model.Name</h3> 
            @Html.ActionLink("Edit Details", MVC.Contact.Edit(Model.Id), new { @class = "floatRight blueLinks", title = "Edit Details" })
        </div> 

        <div class="grid3 floatLeft">
            <p><span class="greyHighlight">Title: </span>@Model.Title</p>
        </div>

        <div class="grid3 floatLeft"> 
            <p class="floatLeft"><span class="greyHighlight">Direct Phone: </span>@Model.DirectPhoneWithExtension</p> 
            <p class="floatRight"><span class="greyHighlight">Mobile Phone: </span> @Model.MobilePhone</p> 
        </div> 
         
        <div class="grid3 marginBottom_10 floatLeft">
            <p>@Html.Raw(Html.Encode(Model.Notes).Replace(Environment.NewLine, "<br />"))</p>
            @Html.ActionLink("Show Details", MVC.Contact.Details(Model.Id), new { @class = "blueLinks", title = "Show Details" })
        </div>
    </div> 
</div>