@model MyJobLeads.DomainModel.Entities.Task
           
@{
    string linkString = string.Concat(Model.Name, " for ", Model.Company.Name);
    if (Model.TaskDate != null && Model.TaskDate.HasValue)
    {
        linkString = string.Concat(linkString, "<br>Due: ", Model.TaskDate.ToString());
    }
}

@Html.ActionLink(linkString, MVC.Task.Details(Model.Id))
